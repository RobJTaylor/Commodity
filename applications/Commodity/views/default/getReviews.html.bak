{{extend 'layout.html'}}
{{for row in db(db.auth_user.id == userID,db.auth_user.ALL).select():}}
    {{userImage = row.profile_image}}
    {{userScore = row.reviewer_score}}
    <h1>{{=userName}}'s Reviews:</h1>
    <img src="{{=URL('default', 'download', args=userImage)}}" class="reviewerImage img-circle center"/>
    <h4>Review score: {{=userScore}}</h4>
{{pass}}
{{for row in rows:}}
<div class="panel panel-success">
    <div class="panel-heading">
        <h4>{{=row.review_name}}</h4>
    </div>
    <div class="panel-body">
        <p><section class="reviewText">Date:</section> {{=row.time_stamp}}</p>
        <p><section class="reviewText">Author:</section> {{=row.reviewer_name}}</p>
        <p><section class="reviewText">Rating:</section> {{=row.review_rating}}</p>
        <p><section class="reviewText">Review:</section> {{=row.review_content}}</p>
    </div>
</div>
{{pass}}
